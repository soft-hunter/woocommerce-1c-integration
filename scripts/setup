                <Ğ“Ñ€ÑƒĞ¿Ğ¿Ñ‹>
                    <Ğ˜Ğ´>test-category-1</Ğ˜Ğ´>
                </Ğ“Ñ€ÑƒĞ¿Ğ¿Ñ‹>
            </Ğ¢Ğ¾Ğ²Ğ°Ñ€>
        </Ğ¢Ğ¾Ğ²Ğ°Ñ€Ñ‹>
    </ĞšĞ°Ñ‚Ğ°Ğ»Ğ¾Ğ³>
</ĞšĞ¾Ğ¼Ğ¼ĞµÑ€Ñ‡ĞµÑĞºĞ°ÑĞ˜Ğ½Ñ„Ğ¾Ñ€Ğ¼Ğ°Ñ†Ğ¸Ñ>
EOF
    
    log_info "Created test data directory with sample files"
fi

# Display setup summary
log_info "Setup completed successfully!"
echo ""
echo "ğŸ“‹ Setup Summary:"
echo "  â€¢ Plugin symlinked and activated"
echo "  â€¢ Required directories created"
echo "  â€¢ WooCommerce installed/activated"
echo "  â€¢ Development settings configured"
echo "  â€¢ Test data directory created"
echo ""
echo "ğŸ”— Exchange URL: $(wp option get home --path="$wp_root")/?wc1c=exchange"
echo "ğŸ“ Data Directory: $data_dir"
echo "ğŸ§ª Test Data: $test_data_dir"
echo ""
echo "ğŸš€ You can now start developing with the WooCommerce 1C Exchange plugin!"